{
  "private": true,
  "name": "nestjs-bff-api",
  "version": "0.2.0",
  "description": "A Nestjs Backend-For-Frontend with CLI",
  "author": "ahrnee",
  "license": "MIT",
  "scripts": {
    "format": "prettier --write \"**/*.ts\"",
    "start": "ts-node src/app/host/http/web-app/web-app.ts",
    "start:dev": "nodemon",
    "prestart:prod": "rm -rf dist && tsc",
    "start:prod": "node dist/app/host/http/web-app/web-app.js",
    "start:hmr": "node dist/server",
    "install-docker-mongodb": "docker-compose pull mongodb",
    "test": "jest --config=jest.json",
    "test:cov": "jest --coverage",
    "e2e": "concurrently --kill-others \"npm run e2e-docker\" \"npm run e2e-jest\"",
    "e2e-docker": "docker-compose up mongodb_e2e",
    "e2e-jest": "jest --config ./jest-e2e.json --bail --colors",
    "webpack": "webpack --config webpack.config.js"
  },
  "dependencies": {
    "@nestjs-bff/backend": "^0.0.20",
    "@nestjs-bff/universal": "^0.0.9",
    "@nestjs/common": "^5.3.9",
    "@nestjs/core": "^5.3.10",
    "@nestjs/microservices": "^5.3.8",
    "@nestjs/testing": "^5.3.8",
    "@nestjs/websockets": "^5.3.8",
    "@types/lodash": "^4.14.116",
    "axios": "^0.18.0",
    "bcrypt-nodejs": "0.0.3",
    "body-parser": "^1.18.3",
    "cache-manager": "^2.9.0",
    "chalk": "^2.4.1",
    "class-transformer": "^0.1.9",
    "class-validator": "^0.8.5",
    "cookie-parser": "^1.4.3",
    "dotenv": "^5.0.1",
    "express": "^4.16.3",
    "fastify-formbody": "^2.0.1",
    "helmet": "^3.13.0",
    "jsonwebtoken": "^8.3.0",
    "mongoose": "^5.3.9",
    "pretty-error": "^2.1.1",
    "reflect-metadata": "^0.1.12",
    "rxjs": "^6.3.3",
    "simple-oauth2": "^2.2.1",
    "typescript": "^2.6.2",
    "winston": "^2.4.4",
    "winston-daily-rotate-file": "^3.3.3"
  },
  "devDependencies": {
    "@types/bcrypt-nodejs": "0.0.30",
    "@types/body-parser": "^1.17.0",
    "@types/cache-manager": "^1.2.6",
    "@types/cookie-parser": "^1.4.1",
    "@types/dotenv": "^4.0.3",
    "@types/express": "^4.0.39",
    "@types/helmet": "^0.0.38",
    "@types/jest": "^23.3.2",
    "@types/jsonwebtoken": "^7.2.7",
    "@types/mongoose": "^5.2.17",
    "@types/node": "^9.6.32",
    "@types/simple-oauth2": "^2.2.0",
    "@types/supertest": "^2.0.6",
    "@types/yargs": "^11.1.2",
    "better-npm-run": "^0.1.1",
    "concurrently": "^3.6.1",
    "cross-env": "^5.1.6",
    "jest": "^23.6.0",
    "nodemon": "^1.18.4",
    "prettier": "^1.14.3",
    "supertest": "^3.3.0",
    "ts-jest": "^23.10.4",
    "ts-loader": "^4.5.0",
    "ts-node": "^7.0.1",
    "tsconfig-paths": "^3.6.0",
    "tsconfig-paths-webpack-plugin": "^3.2.0",
    "tslint": "5.3.2",
    "webpack": "^4.20.2",
    "webpack-cli": "^2.0.13",
    "webpack-node-externals": "^1.6.0"
  }
}
