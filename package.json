{
    "private": true,
    "workspaces":[
      "backend",
      "cli",
      "devops",
      "frontend",
      "global",
      "pkg-bff/*"
    ],
    "name": "nestjs-bff",
    "version": "1.1.4",
    "description": "A Nestjs Backend-For-Frontend with CLI",
    "author": "ahrnee",
    "license": "MIT",
    "repository": {
      "type": "git",
      "url": "https://github.com/ahrnee/nestjs-bff.git"
    },
    "scripts": {
      "install": "lerna exec -- yarn install && yarn run packages:build",
      "clean": "lerna run clean",
      "build": "tsc --build ../tsconfig-all-ref.json --verbose",
      "rebuild": "yarn run build -- --force",
      "start": "concurrently --kill-others \"lerna run start --scope @yourapp/backend\" \"lerna run start --scope @yourapp/backend\"",
      "test": "lerna run test",
      "e2e": "lerna run e2e",
      "check": "yarn clean && yarn build && yarn test && yarn e2e",
      "packages:link": "lerna bootstrap",
      "packages:publish": "yarn run packages:build && lerna publish",
      "packages:build": "tsc --build tsconfig-pkg-ref.json --verbose",
      "packages:rebuild": "tsc --build --force tsconfig-pkg-ref.json --verbose",
      "install-docker-mongodb": "lerna run install-docker-mongodb --scope @yourapp/backend",
      "install-all-with-docker": "yarn run install && yarn run install-docker-mongodb",
      "start-all-with-docker": "concurrently --kill-others \"lerna run start-docker-mongodb --scope @yourapp/backend\" \"yarn run start\"",
      "db-seed:dev": "ts-node cli migration-custom --filename seed-dev --direction up"
    },
    "devDependencies": {
      "concurrently": "^4.1.0",
      "lerna": "^3.5.1",
      "ts-node": "~7.0.0",
      "typescript": "^3.2.2"
    }
  }
  