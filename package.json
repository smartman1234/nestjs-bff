{
  "private": true,
  "name": "nestjs-bff",
  "version": "0.1.0",
  "description": "A Nestjs Backend-For-Frontend with CLI",
  "author": "ahrnee",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/ahrnee/nestjs-bff.git"
  },
  "scripts": {
    "start-all-with-docker": "concurrently --kill-others \"yarn start-docker-mongodb\" \"yarn start-api\" \"yarn start-webclient\"",
    "start-all": "concurrently --kill-others \"yarn start-api\" \"yarn start-webclient\"",
    "start-api": "cd api && yarn start",
    "start-docker-mongodb": "cd api && yarn start-docker-mongodb",
    "start-webclient": "cd webclient && yarn start",
    "install-all-with-docker": "yarn install-all && yarn install-docker-mongodb",
    "install-all": "yarn install & yarn install-api & yarn install-cli & yarn install-webclient",
    "install-api": "cd api && yarn install && cd ..",
    "install-cli": "cd cli && yarn install && cd ..",
    "install-webclient": "cd webclient && yarn install && cd ..",
    "install-docker-mongodb": "cd api && yarn install-docker-mongodb && cd ..",
    "start-bff-api": "ts-node --project api/tsconfig.json -r tsconfig-paths/register ./api/src/main.ts",
    "db-seed:dev": "ts-node cli migration-custom --filename seed-dev --direction up"
  },
  "dependencies": {},
  "devDependencies": {
    "concurrently": "^3.6.0",
    "ts-node": "^4.1.0"
  }
}
