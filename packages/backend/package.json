{
  "name": "@nestjs-bff/backend",
  "version": "0.1.0",
  "description": "A backend module for nestjs-bff",
  "author": "ahrnee",
  "license": "MIT",
  "homepage": "https://github.com/ahrnee/nestjs-bff",
  "scripts": {
    "build": "npm run clean:dist && npm run build-only",
    "build-and-link": "npm run build && cd dist && npm link",
    "build-only": "npm install && tsc && npm run copy:package",
    "clean:dist": "cd dist && ls | grep -v node_modules | xargs rm -rf && cd ..",
    "copy:package": "cp -rf package.json README.md LICENSE dist && cp -rf 'src/shared/migrations/templates/migrationTemplate.ts' 'dist/shared/migrations/templates/' ",
    "pub": "npm run build && cd dist && npm publish --access public",
    "test": "jest --config=jest.json",
    "test:cov": "jest --coverage"
  },
  "dependencies": {
    "@nestjs-bff/universal": "^0.1.0",
    "@nestjs/common": "^5.4.0",
    "@nestjs/core": "^5.4.0",
    "@nestjs/testing": "^5.4.0",
    "@types/lodash": "^4.14.118",
    "axios": "^0.18.0",
    "bcrypt-nodejs": "0.0.3",
    "cache-manager": "^2.9.0",
    "class-transformer": "^0.2.0",
    "class-validator": "^0.9.1",
    "cookie-parser": "^1.4.3",
    "inquirer": "^6.2.0",
    "jsonwebtoken": "^8.4.0",
    "lodash": "^4.17.11",
    "mongoose": "^5.3.13",
    "reflect-metadata": "^0.1.12",
    "rxjs": "^6.3.3",
    "simple-oauth2": "^2.2.1",
    "typescript": "^3.1.6",
    "winston": "^3.1.0",
    "winston-daily-rotate-file": "^3.5.1"
  },
  "devDependencies": {
    "@types/bcrypt-nodejs": "0.0.30",
    "@types/body-parser": "^1.17.0",
    "@types/cache-manager": "^1.2.6",
    "@types/cookie-parser": "^1.4.1",
    "@types/dotenv": "^6.1.0",
    "@types/express": "^4.16.0",
    "@types/helmet": "^0.0.42",
    "@types/jest": "^23.3.9",
    "@types/jsonwebtoken": "^8.3.0",
    "@types/mongoose": "^5.3.1",
    "@types/node": "^10.12.10",
    "@types/simple-oauth2": "^2.2.0",
    "@types/supertest": "^2.0.6",
    "@types/yargs": "^12.0.1",
    "jest": "^23.6.0",
    "prettier": "^1.15.2",
    "ts-node": "^7.0.1",
    "tslint": "^5.11.0"
  }
}
