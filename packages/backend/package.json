{
  "name": "@nestjs-bff/backend",
  "version": "0.0.19",
  "description": "A backend module for nestjs-bff",
  "author": "ahrnee",
  "scripts": {
    "test": "jest --config=jest.json",
    "test:cov": "jest --coverage",
    "clean:dist": "cd dist && ls | grep -v node_modules | xargs rm -rf && cd ..",
    "build-only": "tsc && npm run copy:package",
    "copy:package": "cp -rf package.json README.md LICENSE dist && cp -rf 'src/shared/migrations/templates/migrationTemplate.ts' 'dist/shared/migrations/templates/' ",
    "build": "npm run clean:dist && npm run build-only",
    "pub": "npm run build && cd dist && npm publish --access public"
  },
  "dependencies": {
    "@nestjs-bff/universal": "^0.0.9",
    "@nestjs/common": "^5.3.9",
    "@nestjs/core": "^5.3.9",
    "@nestjs/testing": "^5.3.8",
    "@types/lodash": "^4.14.116",
    "axios": "^0.18.0",
    "bcrypt-nodejs": "0.0.3",
    "cache-manager": "^2.9.0",
    "class-transformer": "^0.1.9",
    "class-validator": "^0.8.5",
    "cookie-parser": "^1.4.3",
    "jsonwebtoken": "^8.3.0",
    "mongoose": "^5.3.2",
    "reflect-metadata": "^0.1.12",
    "rxjs": "^6.3.3",
    "simple-oauth2": "^2.2.1",
    "typescript": "^2.6.2",
    "winston": "^2.4.4",
    "winston-daily-rotate-file": "^3.3.3"
  },
  "devDependencies": {
    "@types/bcrypt-nodejs": "0.0.30",
    "@types/body-parser": "^1.17.0",
    "@types/cache-manager": "^1.2.6",
    "@types/cookie-parser": "^1.4.1",
    "@types/dotenv": "^4.0.3",
    "@types/express": "^4.0.39",
    "@types/helmet": "^0.0.38",
    "@types/jest": "^23.3.2",
    "@types/jsonwebtoken": "^7.2.7",
    "@types/mongoose": "^5.3.0",
    "@types/node": "^9.6.36",
    "@types/simple-oauth2": "^2.2.0",
    "@types/supertest": "^2.0.6",
    "@types/yargs": "^11.1.2",
    "cross-env": "^5.1.6",
    "jest": "^23.6.0",
    "nodemon": "^1.18.4",
    "prettier": "^1.14.3",
    "ts-jest": "^23.10.4",
    "ts-loader": "^4.5.0",
    "ts-node": "^7.0.1",
    "tslint": "5.3.2",
    "webpack": "^4.20.2",
    "webpack-cli": "^2.0.13",
    "webpack-node-externals": "^1.6.0"
  }
}
