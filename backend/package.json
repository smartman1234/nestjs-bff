{
  "private": true,
  "name": "@yourapp/backend",
  "version": "1.1.0",
  "description": "A Nestjs Backend-For-Frontend with CLI",
  "author": "ahrnee",
  "license": "MIT",
  "homepage": "https://github.com/ahrnee/nestjs-bff",
  "scripts": {
    "build": "tsc --build",
    "rebuild": "rm -rf dist && tsc --build",
    "e2e-with-docker": "concurrently --kill-others \"npm run mongodb-docker\" \"npm run e2e\"",
    "e2e": "jest --config ./e2e/jest-e2e.json --detectOpenHandles",
    "e2e-with-full-build": "cd ../devops && npm run packages:build && cd ../backend && npm run e2e",
    "format": "prettier --write \"**/*.ts\"",
    "install-docker-mongodb": "docker-compose pull mongodb",
    "mongodb-docker": "docker-compose up mongodb",
    "prestart:prod": "npm run build",
    "start": "ts-node src/app/host/http/web-app.ts",
    "start:dev": "nodemon",
    "start:prod": "node dist/app/host/http/web-app.js",
    "start:hmr": "node dist/server",
    "start-docker-mongodb": "npm run mongodb-docker && npm run start",
    "-- test": "jest --config=./src/jest.json",
    "test:cov": "jest --coverage",
    "webpack": "webpack --config webpack.config.js"
  },
  "dependencies": {
    "@nestjs-bff/backend": "^1.1.0",
    "@nestjs-bff/global-contracts": "^1.1.0",
    "@nestjs-bff/global-utils-dev": "^1.1.0",
    "@nestjs-bff/global-utils-prod": "^1.1.0",
    "@nestjs/common": "^5.6.2",
    "@nestjs/core": "^5.6.2",
    "@nestjs/testing": "^5.6.2",
    "@types/lodash": "^4.14.120",
    "@yourapp/global": "^1.1.0",
    "axios": "^0.18.0",
    "body-parser": "^1.18.3",
    "cache-manager": "^2.9.0",
    "class-transformer": "^0.2.0",
    "class-validator": "^0.9.1",
    "cookie-parser": "^1.4.3",
    "helmet": "^3.15.0",
    "jsonwebtoken": "^8.4.0",
    "lodash": "^4.17.11",
    "moment": "^2.23.0",
    "mongodb": "^3.1.12",
    "mongoose": "^5.4.5",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^6.3.3"
  },
  "devDependencies": {
    "@types/cache-manager": "^1.2.6",
    "@types/jest": "^23.3.12",
    "@types/node": "^10.12.18",
    "@types/supertest": "^2.0.7",
    "concurrently": "^4.1.0",
    "jest": "^23.6.0",
    "jest-extended": "^0.11.0",
    "nodemon": "^1.18.9",
    "prettier": "^1.15.3",
    "supertest": "^3.4.1",
    "ts-jest": "^23.10.5",
    "ts-loader": "^5.3.3",
    "ts-node": "^7.0.1",
    "tslint": "^5.12.1",
    "typescript": "^3.2.4",
    "webpack": "^4.28.4",
    "webpack-cli": "^3.2.1",
    "webpack-node-externals": "^1.6.0"
  }
}
