{
  "private": true,
  "name": "nestjs-bff-backend",
  "version": "0.2.0",
  "description": "A Nestjs Backend-For-Frontend with CLI",
  "author": "ahrnee",
  "license": "MIT",
  "scripts": {
    "e2e-with-docker": "concurrently --kill-others \"npm run mongodb-docker\" \"npm run e2e\"",
    "e2e": "jest --config ./e2e/jest-e2e.json --bail --colors",
    "format": "prettier --write \"**/*.ts\"",
    "install-docker-mongodb": "docker-compose pull mongodb",
    "link": "npm link @nestjs-bff/universal && npm link @nestjs-bff/backend",
    "mongodb-docker": "docker-compose up mongodb",
    "prestart:prod": "rm -rf dist && tsc --build",
    "start": "ts-node src/app/host/http/web-app/web-app.ts",
    "start:dev": "nodemon",
    "start:prod": "node dist/app/host/http/web-app/web-app.js",
    "start:hmr": "node dist/server",
    "start-docker-mongodb": "npm run mongodb-docker && npm run start",
    "test": "jest --config=./src/jest.json",
    "test:cov": "jest --coverage",
    "webpack": "webpack --config webpack.config.js"
  },
  "dependencies": {
    "@nestjs-bff/backend": "^0.1.0",
    "@nestjs-bff/universal": "0.1.0",
    "@nestjs/common": "^5.3.9",
    "@nestjs/core": "^5.3.10",
    "@nestjs/testing": "^5.3.8",
    "@types/lodash": "^4.14.118",
    "axios": "^0.18.0",
    "body-parser": "^1.18.3",
    "cache-manager": "^2.9.0",
    "class-transformer": "^0.2.0",
    "class-validator": "^0.9.1",
    "cookie-parser": "^1.4.3",
    "helmet": "^3.15.0",
    "jsonwebtoken": "^8.4.0",
    "lodash": "^4.17.11",
    "mongodb": "^3.1.10",
    "mongoose": "^5.3.13",
    "reflect-metadata": "^0.1.12",
    "rxjs": "^6.3.3"
  },
  "devDependencies": {
    "@types/cache-manager": "^1.2.6",
    "@types/jest": "^23.3.2",
    "@types/node": "^10.12.10",
    "@types/supertest": "^2.0.6",
    "concurrently": "^4.1.0",
    "jest": "^23.6.0",
    "nodemon": "^1.18.6",
    "prettier": "^1.15.2",
    "supertest": "^3.3.0",
    "ts-jest": "^23.10.5",
    "ts-loader": "^5.3.0",
    "ts-node": "^7.0.1",
    "tslint": "5.11.0",
    "typescript": "^3.1.6",
    "webpack": "^4.26.0",
    "webpack-cli": "^3.1.2",
    "webpack-node-externals": "^1.6.0"
  }
}
