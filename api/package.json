{
  "private": true,
  "name": "nestjs-bff-api",
  "version": "0.1.0",
  "description": "A Nestjs Backend-For-Frontend with CLI",
  "author": "ahrnee",
  "license": "MIT",
  "scripts": {
    "format": "prettier --write \"**/*.ts\"",
    "start": "ts-node -r tsconfig-paths/register src/main.ts",
    "start-docker-mongodb": "docker-compose up mongodb",
    "start:dev": "nodemon",
    "prestart:prod": "rm -rf dist && tsc",
    "start:prod": "node dist/main.js",
    "start:hmr": "node dist/server",
    "install-docker-mongodb": "docker-compose pull mongodb",
    "test": "env TEST_VAR=process.argv node -e console.log(process.env)",
    "test:cov": "jest --coverage",
    "e2e-with-docker": "concurrently --kill-others \"yarn start-docker-mongodb\" \"yarn test:e2e\"",
    "e2e": "jest --config ./e2e/jest-e2e.json  --detectOpenHandles",
    "webpack": "webpack --config webpack.config.js"
  },
  "dependencies": {
    "@nestjs/common": "^5.0.0",
    "@nestjs/core": "^5.0.0",
    "@nestjs/microservices": "^5.0.0",
    "@nestjs/mongoose": "^5.0.0",
    "@nestjs/passport": "^1.0.11",
    "@nestjs/testing": "^5.0.0",
    "@nestjs/websockets": "^5.0.0",
    "@types/joi": "^13.3.0",
    "chalk": "^2.4.1",
    "class-transformer": "^0.1.9",
    "class-validator": "^0.8.5",
    "dotenv": "^5.0.1",
    "fastify-formbody": "^2.0.0",
    "joi": "^13.4.0",
    "jsonwebtoken": "^8.3.0",
    "mongoose": "^5.1.2",
    "passport": "^0.4.0",
    "passport-jwt": "^4.0.0",
    "pretty-error": "^2.1.1",
    "reflect-metadata": "^0.1.12",
    "rxjs": "^6.0.0",
    "typescript": "^2.6.2",
    "winston": "^2.4.2",
    "winston-daily-rotate-file": "^3.2.1"
  },
  "devDependencies": {
    "@types/dotenv": "^4.0.3",
    "@types/express": "^4.0.39",
    "@types/inquirer": "^0.0.41",
    "@types/jest": "^23.1.0",
    "@types/jsonwebtoken": "^7.2.7",
    "@types/mongoose": "^5.0.15",
    "@types/node": "^9.3.0",
    "@types/passport-jwt": "^3.0.1",
    "@types/supertest": "^2.0.4",
    "@types/winston": "^2.3.9",
    "@types/yargs": "^11.0.0",
    "better-npm-run": "^0.1.0",
    "concurrently": "^3.6.0",
    "cross-env": "^5.1.6",
    "inquirer": "^3.2.0",
    "jest": "^23.1.0",
    "nodemon": "^1.14.1",
    "prettier": "^1.11.1",
    "supertest": "^3.1.0",
    "ts-jest": "^21.2.4",
    "ts-loader": "^4.1.0",
    "ts-node": "^7.0.0",
    "tsconfig-paths": "^3.1.1",
    "tslint": "5.3.2",
    "webpack": "^4.2.0",
    "webpack-cli": "^2.0.13",
    "webpack-node-externals": "^1.6.0"
  }
}
