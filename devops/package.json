{
  "private": true,
  "name": "nestjs-bff-devops",
  "version": "1.1.4",
  "description": "A Nestjs Backend-For-Frontend with CLI",
  "author": "ahrnee",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/ahrnee/nestjs-bff.git"
  },
  "scripts": {
    "start": "concurrently --kill-others \"yarn run start-backend\" \"yarn run start-frontend\"",
    "install": "lerna exec -- yarn install && yarn run packages:build",
    "e2e": "lerna run e2e",
    "test": "lerna run test",
    "rebuild": "yarn run build -- --force",
    "uber-test-all": "yarn run test-all && yarn run e2e-all",
    "install-all-with-docker": "yarn run install-all && yarn run install-docker-mongodb",
    "install-docker-mongodb": "cd ../backend && yarn run install-docker-mongodb && cd ..",
    "start-all-with-docker": "concurrently --kill-others \"yarn run start-docker-mongodb\" \"yarn run start-backend\" \"yarn run start-frontend\"",
    "start-backend": "cd ../backend && yarn run start",
    "db-seed:dev": "ts-node cli migration-custom --filename seed-dev --direction up",
    "start-docker-mongodb": "cd ../backend && yarn run start-docker-mongodb",
    "start-frontend": "cd ../frontend && yarn run start",
    "build": "tsc --build ./tsconfig-all-ref.json --verbose",
    "packages:link": "lerna bootstrap",
    "packages:publish": "yarn run packages:build && lerna publish",
    "packages:build": "tsc --build ./tsconfig-pkg-ref.json --verbose",
    "packages:rebuild": "tsc --build --force ./tsconfig-pkg-ref.json --verbose"
  },
  "devDependencies": {
    "concurrently": "^4.1.0",
    "lerna": "^3.5.1",
    "ts-node": "~7.0.0",
    "typescript": "^3.2.2"
  }
}
