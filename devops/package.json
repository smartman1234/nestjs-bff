{
  "private": true,
  "name": "nestjs-bff",
  "version": "0.1.0",
  "description": "A Nestjs Backend-For-Frontend with CLI",
  "author": "ahrnee",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/ahrnee/nestjs-bff.git"
  },
  "scripts": {
    "start-all-with-docker": "concurrently --kill-others \"npm run start-docker-mongodb\" \"npm run start-api\" \"npm run start-webclient\"",
    "start-all": "concurrently --kill-others \"npm run start-api\" \"npm run start-webclient\"",
    "start-api": "cd ../apps/api && npm run start",
    "start-docker-mongodb": "cd ../apps/api && npm run start-docker-mongodb",
    "start-webclient": "cd ../apps/webclient && npm run start",
    "install-all-with-docker": "npm run install-all && npm run install-docker-mongodb",
    "install-all": "npm run install & npm run install-api & npm run install-cli & npm run install-webclient",
    "install-api": "cd ../apps/api && npm run install && cd ..",
    "install-cli": "cd ../apps/cli && npm run install && cd ..",
    "install-webclient": "cd ../apps/webclient && npm run install && cd ..",
    "install-docker-mongodb": "cd ../apps/api && npm run install-docker-mongodb && cd ..",
    "start-bff-api": "ts-node --project ../apps/api/tsconfig.json -r tsconfig-paths/register ../apps/api/src/main.ts",
    "db-seed:dev": "ts-node cli migration-custom --filename seed-dev --direction up"
  },
  "dependencies": {},
  "devDependencies": {
    "concurrently": "^3.6.0",
    "ts-node": "^4.1.0"
  }
}
